generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./gameon.db"
}

model Player {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  username  String @unique
  schedule  Schedule[]
}

model Game {
  id       Int      @id @default(autoincrement())
  title    String   @unique
  schedules Schedule[]
}

model Schedule {
  id        Int    @id @default(autoincrement())
  dateTime DateTime 
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId Int
  game Game @relation(fields:[gameId], references: [id], onDelete: Cascade)
  gameId Int
}
